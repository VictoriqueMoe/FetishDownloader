{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "module": "amd",
    "target": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "checkJs": false,
    "removeComments": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "downlevelIteration": true,
    "noEmitOnError" : true,
    "watch": false,
    "lib": [
      "es2015",
      "es2016",
      "es2018",
      "esnext",
      "dom"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": false
  }
}
